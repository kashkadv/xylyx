{{ 'section-footer.css' | asset_url | stylesheet_tag }}

<footer class="footer">
  <div class="container footer__wrapper">
    <div>
      <div class="footer__logo">{% render 'logo' %}</div>
      <div class="footer__slogan text--l">{{ section.settings.footer_slogan }}</div>
    </div>
    {% for block in section.blocks %}
      {% case block.type %}
        {% when 'footer_navigation_block' %}
          <div>
            {{ block.settings.heading }}
            {% for link in block.settings.menu.links %}
              <a class="text--m link link--white" href="{{ link.url }}">{{ link.title }}</a>
            {% endfor %}
          </div>

        {% when 'copyright_block' %}
          <div class="copyright">
            <div class="copyright__text">Â© {{ 'now' | date: '%Y' }}. {{ block.settings.copyright_text }}</div>
            <div class="copyright__links">
              <div class="link">
                <a href="{{ block.settings.terms_and_conditions_link }}">Terms and Conditions</a>
              </div>
              <div class="link">
                <a href="{{ block.settings.privacy_policy_link }}">Privacy Policy</a>
              </div>
              <div class="link">
                <label>Website by </label>
                <a href="{{ block.settings.developer_link }}">Craft & Root</a>
              </div>
            </div>
          </div>
      {% endcase %}
    {% endfor %}
  </div>
</footer>

{% schema %}
{
  "name": "Footer section",
  "settings": [
    {
      "type": "richtext",
      "label": "Slogan",
      "id": "footer_slogan"
    }
  ],
  "blocks": [
    {
      "type": "@app"
    },
    {
      "name": "Navigation block",
      "type": "footer_navigation_block",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "link_list",
          "id": "menu",
          "label": "Menu"
        }
      ]
    },
    {
      "name": "Contacts block",
      "type": "footer_contacts_block",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "richtext",
          "id": "address",
          "label": "Address"
        },
        {
          "type": "text",
          "id": "phone",
          "label": "Phone"
        },
        {
          "type": "text",
          "id": "email",
          "label": "Email"
        }
      ]
    },
    {
      "name": "Copyright block",
      "type": "copyright_block",
      "settings": [
        {
          "type": "text",
          "id": "copyright_text",
          "label": "Copyright text"
        },
        {
          "type": "url",
          "id": "terms_and_conditions_link",
          "label": "Terms and Conditions link"
        },
        {
          "type": "url",
          "id": "privacy_policy_link",
          "label": "Privacy Policy link"
        },
        {
          "type": "url",
          "id": "developer_link",
          "label": "Developer link"
        }
      ]
    }
  ]
}
{% endschema %}
